---
import { getEntry, getCollection } from "astro:content";
import { BulletPoints } from "@models/bullet-points";
import BulletPointsComponent from "@components/BulletPoints.astro";

export async function getStaticPaths() {
  function range(n: number): number[] {
    const arr = new Array(n);
    return [...arr.keys()];
  }

  const entries = await getCollection("bullet-points");
  return entries.flatMap((entry) => {
    const data = entry.data as BulletPoints;
    return range(data.rows.length + 1)
      .filter((count) => count > 0)
      .map((count) => ({
        params: {
          slug: data.slug,
          count: count,
        },
      }));
  });
}

export const partial = true;

const { slug, count } = Astro.params;
const countN = Number.parseInt(count);
const entry = await getEntry("bullet-points", slug);
const data = entry.data as BulletPoints;
const partialData = data.rows.slice(0, countN);
const next: number | null = countN >= data.rows.length ? null : countN + 1;
---

{
  next === null ? (
    <ul>
      <BulletPointsComponent rows={data.rows} />
    </ul>
  ) : (
    <ul
      hx-get={`/partial/bullet-points/${slug}/${next}`}
      hx-swap="outerHTML"
      hx-trigger="click from:main"
    >
      <BulletPointsComponent rows={partialData} />
    </ul>
  )
}
