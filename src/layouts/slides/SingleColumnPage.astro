---
import Slide from "../Slide.astro";

interface Props {
  title: string;
}

const { title }: Props = Astro.props;
---

<Slide>
  <h1>{title}</h1>
  <div class="content">
    <slot />
  </div>
</Slide>

<style>
  h1 {
    margin: 0;
    padding-left: 144px;
    padding-top: 89px;
  }

  .content {
    padding-left: 144px;
  }
</style>
