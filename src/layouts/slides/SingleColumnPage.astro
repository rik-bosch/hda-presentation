---
import { type SlideData } from "@models/slide-data";
import Slide from "../Slide.astro";

interface Props {
  slideData: SlideData;
}

const { slideData }: Props = Astro.props;
---

<Slide slideData={slideData}>
  <h1>{slideData.title}</h1>
  <div class="single-column-page">
    <slot />
  </div>
</Slide>

<style>
  h1 {
    margin: 0;
    padding-left: 144px;
    padding-top: 89px;
  }
</style>

<style is:global>
  .single-column-page {
    margin-top: 89px;
    padding-left: 144px;
  }

  .single-column-page li {
    margin-top: 21px;
  }
</style>
