---
import Base from "./Base.astro";
---

<Base>
  <main><slot /></main>
</Base>

<style>
  html,
  body,
  main {
    padding: 0;
    margin: 0;
    height: 100%;
  }

  body {
    background-color: #303030;
  }

  main {
    background-image: url(/img/background1.jpg);
    background-repeat: no-repeat;
    background-size: cover;

    font-family: Arial, Helvetica, sans-serif;
    font-size: 21px;
    color: #f8f8f8;

    display: grid;
    align-items: end;
  }
</style>
